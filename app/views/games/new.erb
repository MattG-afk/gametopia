
<form>
       <fieldset>
          <legend>Name of Game</legend>
          <p><input type="text" name="name" placeholder="Name:">
          </p>
        </fieldset>
            
        <fieldset>
         <legend>Genre</legend>
         <p>
           <label>What Genre is this type of game?</label>
             <input type = "checkbox"
                 name = "genre"
                 value = "horror" />
             <label for = "chkHorror">Horror Games</label>
             <input type = "checkbox"
                 name = "genre"
                 value = "rpg" />
             <label for = "chkRPG">RPG</label>
             <input type = "checkbox"
                 name = "genre"
                 value = "shooter" />
             <label for = "chkShooter">Shooter</label>
             <input type = "checkbox"
                 name = "genre"
                 value = "sidescroller" />
             <label for = "chkSideScroller">SideScroller</label>
         </p>
       </fieldset>

       <fieldset>
         <legend>Console</legend>
         <p>
           <label>What Console can this game be played on?</label>
             <input type = "checkbox"
                 name = "console"
                 value = "playstation" />
             <label for = "chkPlaystation">Playstation</label>
             <input type = "checkbox"
                 name = "console"
                 value = "xbox" />
             <label for = "chkXbox">Xbox</label>
             <input type = "checkbox"
                 name = "console"
                 value = "nintendo" />
             <label for = "chkNintendo">Nintendo</label>
             <input type = "checkbox"
                 name = "console"
                 value = "pc" />
             <label for = "chkPC">PC</label>
             
         </p>
       </fieldset>

       <input type="submit" value="Submit">
</form>

<p><a href="/logout">Log Out</a></p>